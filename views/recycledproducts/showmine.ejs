<% layout('layouts/boilerplate') %>
<div class="row mb-3">
    <h1 class="text-center heading-color mb-3">Your Recycled Products</h1>
</div>
<div class="row mb-3 justify-content-center">
    <% if(recycledproducts.length==0){ %>
        <p class="text-center mb-3">You did not post any recycled products</p>
        <img class="img-fluid" src="/images/img11.jpg" alt="" style="display: block; width: 40% ; height: 40%;" >
    <% } else{ %>
    <% for(let recycledproduct of recycledproducts) {%>
        <div class="col-md-4">
            <div class="card mb-5" style="width: 18rem;">
                <img class="card-img-top" alt="" src="<%=recycledproduct.images[0].url%>">
                <div class="card-body">
                        <h5 class="card-title text-center"><%= recycledproduct.title %> </h5>
                        <a class="btn btn-primary d-flex justify-content-center" href="/recycledproducts/<%=recycledproduct._id%>">View Details</a>
                </div>
            </div>
        </div>
    <%}%>
    <% } %>
</div>
<% layout('layouts/boilerplate') %>
<div class="row mb-3">
    <h1 class="text-center heading-color mb-3">User Profile</h1>
    <div class="col-md-6">
        <img src="/images/img12.jpg" class="img-fluid carousel-img" alt="Responsive image">
    </div>
    <div class="col-md-6 mt-5">
        <div>
            <div>
                <div>
                    <h2><%= user.username %></h2>
                    <p><strong>Email:</strong> <%= user.email %></p>
                    <p><strong>Location:</strong> <%= user.location %></p>
                    <p><strong>Phone:</strong> <%= user.phone %></p>
                    <p><strong>Redeem Points:</strong> <%= user.redeemPoints %></p>
                </div>
            </div>
        </div>
    </div>
</div>

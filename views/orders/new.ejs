<% layout('layouts/boilerplate') %>
<div class="row mb-3">
    <h1 class="text-center heading-color mb-5">Place Your Order</h1>
    <div class="col-md-6">
        <img src="<%= recycledProduct.images[0].url %>" class="img-fluid carousel-img" alt="Responsive image">
    </div>
    <div class="col-md-6 mt-3">
        <h2 class=" text-center heading-color">Order Details</h2>
        <p class="heading-color"><b>Title:</b> <%= recycledProduct.title %></p>
        <p class="heading-color"><b>Description:</b> <%= recycledProduct.description %></p>
        <form action="/orders" method="POST" novalidate class="validated-form">
            <input type="hidden" name="recycledProduct" value="<%= recycledProduct._id %>">
            <div class="mb-3">
                <label class="form-label" for="quantity">Quantity</label>
                <input class="form-control" type="number" id="quantity" name="quantity" value="1" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="pickUpDate">Pickup Date</label>
                <input class="form-control" type="date" id="pickUpDate" name="pickUpDate" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" id="location" name="location" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="d-flex justify-content-center mb-3">
                <button class="btn btn-success">Place Order</button>
            </div>
        </form>
    </div>
</div>

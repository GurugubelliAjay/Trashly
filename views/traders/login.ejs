<% layout('layouts/boilerplate')%>

<div class="container d-flex justify-content-center align-items-center mb-5">
    <div class="row">
        <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
            <div class="card shadow">
                <div class="d-flex justify-content-center">
                <img src="/images/img4.jpg" alt="" class="card-img-top" style="display: block; max-width: 80%; height: 80%;"/>

                </div>
                <div class="card-body">
                    <h5 class="card-title text-center">Trader Login</h5>
                    <form action="/trader/login" method="POST" class="validated-form" novalidate>
                        <div class="mb-3">
                            <label class="form-label" for="username">Username</label>
                            <input class="form-control" type="text" id="username" name="username" autofocus required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label" for="password">Password</label>
                            <input class="form-control" type="password" id="password" name="password" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <div class="d-flex justify-content-center mb-2">
                            <button class="btn btn-success">Login</button>
                        </div>
                            <div class="d-flex justify-content-center">
                                <p>Don't have an account? <a href="/trader/register">Sign up</a></p>
                            </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
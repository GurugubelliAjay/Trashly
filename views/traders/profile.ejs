<% layout('layouts/boilerplate') %>
<div class="row mb-3">
    <h1 class="text-center heading-color mb-3">Trader Profile</h1>
    <div class="col-md-6">
        <img src="/images/img12.jpg" class="img-fluid carousel-img" alt="Responsive image">
    </div>
    <div class="col-md-6 mt-5">
        <div>
            <div>
                <div>
                    <h2><%= trader.username %></h2>
                    <p><strong>Email:</strong> <%= trader.email %></p>
                    <p><strong>Location:</strong> <%= trader.location %></p>
                    <p><strong>Phone:</strong> <%= trader.phone %></p>
                    <p><strong>Recycling Type:</strong> <%= trader.recyclingType %></p>
                </div>
            </div>
        </div>
    </div>
</div>
